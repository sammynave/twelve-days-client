<hbox>
  <box xs="2" class="songs-list-wrapper ui sidebar visible">
    <fill xs="12" class="fill">
      <vbox xs="12" class="songs-list">
        <hbox xs="fit">{{link-to "new song" "songs.new" class="song-link fill-xs"}}</hbox>
        {{#each songs as |song|}}
          <hbox>{{link-to song.name "songs.show" song.id class="song-link fill-xs"}}</hbox>
        {{/each}}
      </vbox>
    </fill>
  </box>
  <vbox xs="10">
    {{outlet}}
  </vbox>
</hbox>
